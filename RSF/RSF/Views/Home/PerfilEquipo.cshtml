@using RSF.Models
@model Equipo

<head>
    <script type="text/javascript" src="~/Content/jquery-3.2.1.min.js"></script>
</head>

@{
    Equipo equipoo = ViewBag.A;
    int Contador = 0;
    int Contador2 = 0;
    Todos A = new Todos();
}


